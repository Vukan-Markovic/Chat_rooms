<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".UpdateProfileActivity">

    <EditText
        android:id="@+id/update_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin"
        android:fontFamily="@font/architects_daughter"
        android:hint="@string/new_username"
        android:inputType="text"
        android:minLines="1"
        android:textAlignment="center"
        android:textColor="@color/primary_light"
        android:textColorHint="@color/primary_light"
        android:textSize="@dimen/text_size"
        android:textStyle="bold"
        android:typeface="serif"
        tools:ignore="Autofill,LabelFor"
        tools:text="Username" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profile_picture_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:fontFamily="@font/architects_daughter"
            android:padding="@dimen/padding"
            android:text="@string/profile_picture"
            android:textColor="@color/primary_light"
            android:textSize="@dimen/text_size"
            android:textStyle="bold"
            android:typeface="serif" />

        <ImageButton
            android:id="@+id/photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin"
            android:layout_toEndOf="@id/profile_picture_label"
            android:layout_toRightOf="@id/profile_picture_label"
            android:background="@color/fui_transparent"
            android:contentDescription="@string/profile_picture_url"
            android:padding="@dimen/padding"
            android:src="@android:drawable/ic_menu_gallery" />

    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:fontFamily="@font/architects_daughter"
        android:onClick="changeProfile"
        android:text="@string/change"
        android:textColor="@color/primary_light" />

</LinearLayout>